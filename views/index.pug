extends ./layout.pug
block content
  include ./navbar.pug
  #carouselExampleIndicators.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
      li(data-target='#carouselExampleIndicators', data-slide-to='1')
      li(data-target='#carouselExampleIndicators', data-slide-to='2')
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src='images/img2.jpg', alt='First slide')
      .carousel-item
        img.d-block.w-100(src='images/img2.jpg', alt='Second slide')
      .carousel-item
        img.d-block.w-100(src='images/img3.jpg', alt='Third slide')
    a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
    section.section-latest.section-t8
      .container
        .row 
          .col-md-12 
            .title-wrap.d-flex.justify-content-between
              .title-box
                h2.title-a Latest Blog 
    section.news-grid.grid 
        .container 
            .row
             each val in blogModel 
                .col-md-4 
                   .card-box-b.card-shadow.news-box
                            .img-box-b
                                img.img-b.img-fluid(src="images/white.png", alt='')
                            .card-overlay
                                .card-header-b
                                    .card-category-b
                                        a.category-b(href='#') #{val.category}
                                    .card-title-bs
                                        h2.title-2
                                            a(href='/blogSingle/'+val._id)
                                                | #{val.title}
                                                br
                                                |  new
                                    .card-date
                                    -const months = ['January','February', 'March','April','May','June','July','August','September','October','November','December']
                                    -let date = val.date;
                                    -let year = date.getFullYear()
                                    -let monthIndex = date.getMonth()
                                    -let day = date.getDate()
                                    -const monthName = months[monthIndex]
                                    -const formatted = `${day } ${monthName} ${year}`
                                        span.date-b= formatted
    include ./footer.pug