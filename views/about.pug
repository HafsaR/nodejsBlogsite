extends ./layout.pug 
block content 
    include ./navbar.pug
    section.about
        .container 
            .row 
                .col-md-12.col-lg-8
                    .title-single-box
                        h1.title-single Contact US
                        span.color-text-a
                            | Aut voluptas consequatur unde sed omnis ex placeat quis eos. Aut natus officia
                            | corrupti qui autem fugit consectetur quo. Et ipsum eveniet laboriosam voluptas beatae possimus qui
                            | ducimus. Et voluptatem deleniti. Voluptatum voluptatibus amet. Et esse sed omnis inventore hic
                            | culpa.
    section.contact 
        .container 
            .row 
                .col-sm-12
                    .contact-map.box
                        #map.contact-map
                        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.1422937950147!2d-73.98731968482413!3d40.75889497932681!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25855c6480299%3A0x55194ec5a1ae072e!2sTimes+Square!5e0!3m2!1ses-419!2sve!4v1510329142834', width='100%', height='450', frameborder='0', style='border:0', allowfullscreen='')

            .col-sm-12.section-t8 
                .row 
                    .col-md-7
                        form.form-a.contactForm(action='', method='post', role='form')
                            #sendmessage Your message has been sent. Thank you!
                            #errormessage
                            .row
                                .col-md-6.mb-3
                                    .form-group
                                    input.form-control.form-control-lg.form-control-a(type='text', name='name', placeholder='Your Name', data-rule='minlen:4', data-msg='Please enter at least 4 chars')
                                    .validation
                                .col-md-6.mb-3
                                    .form-group
                                    input.form-control.form-control-lg.form-control-a(name='email', type='email', placeholder='Your Email', data-rule='email', data-msg='Please enter a valid email')
                                    .validation
                                .col-md-12.mb-3
                                    .form-group
                                    input.form-control.form-control-lg.form-control-a(type='text', name='subject', placeholder='Subject', data-rule='minlen:4', data-msg='Please enter at least 8 chars of subject')
                                    .validation
                                .col-md-12.mb-3
                                    .form-group
                                    textarea.form-control(name='message', cols='45', rows='8', data-rule='required', data-msg='Please write something for us', placeholder='Message')
                                    .validation
                                .col-md-12
                                    button.btn.btn-a(type='submit') Send Message
    include ./footer.pug

